CREATE TABLE Member (
  Member_ID int,
  Member_Number int,
  Gender varchar (6),
  Name varchar (20),
  Surname varchar (50),
  Workplace varchar (50),
  EMail varchar (50),
  Graduation_Date varchar (10),
  National_ID_Number varchar(20),
  Department varchar (50),
  Phone_Number varchar(20),
  Address varchar (50),
  Province varchar (50),
  Remaining_Fee int,
  Inform_Member_Sit varchar (150),
  Member_Regist_Date varchar (10),
  Member_Situation varchar (10),
  PRIMARY KEY (Member_ID, Member_Number, National_ID_Number),
  FOREIGN KEY (Department) REFERENCES Department(Department_Code)
);


